<div class="content">

	<div class="wrapper">
		<div class="row justify-content-center">
			<div class="col-md-10">
				<div class="row justify-content-center">
					<div class="col-md-6">
						<h3 class="heading mb-4">{% trans %}
							Contact Us
							{% endtrans %}</h3>

						{# '@images/' refers to the defined in Twig.yaml namespace  #}
						<p><img src="{{ email.image('@images/contact.svg')}}" alt="Image" class="img-fluid"></p>
					</div>
					<div class="col-md-6">
						<h1>{% trans %}
							Contact Us
							{% endtrans %}</h1>

						<p>{% trans %}
							from
							{% endtrans %}
							:
							{{ mail }}
						</p>

						<p>{% trans %}
							subject
							{% endtrans %}
							:
							{{ sujet }}</p>

						<p>
							{% trans %}
							Your message
							{% endtrans %}
							:
							{{ message | raw }}</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
