{% extends 'base.html.twig' %}

{% block title %}
	{% trans %}Register{% endtrans %}
{% endblock %}

{% block body %}
	<div class="content">

		<div class="wrapper">
			<div class="row justify-content-center">
				<div class="col-md-10">
					<div class="row justify-content-center">
						<div class="col-md-6">
							<h3 class="heading mb-4">{% trans %}
								Sign in and join us!{% endtrans %}</h3>
							<p>{% trans %}Please use the Sign in form.{% endtrans %}</p>
							{% for flashError in app.flashes('verify_email_error') %}
								<div class="alert alert-danger" role="alert">{{ flashError }}</div>
							{% endfor %}
							<p><img src="{{ asset('assets/img/register.jpg')}}" alt="Image" class="img-fluid"></p>
						</div>
						<div class="col-md-6">


							<h1>{% trans %}Register{% endtrans %}</h1>

							{{ form_start(registrationForm) }}

							{{ form_row(registrationForm.email,{
		label: 'Email',
		label_attr : { 'class' : 'bi bi-envelope'}
	})}}


							{{ form_row(registrationForm.plainPassword, {
            label: 'Password',
			label_attr: { 'class' : 'bi-key-fill'}
        }) }}
							{{ form_row(registrationForm.lastname) }}
							{{ form_row(registrationForm.firstname) }}
							{{ form_row(registrationForm.adress) }}
							{{ form_row(registrationForm.city) }}
							{{ form_row(registrationForm.postcode) }}
							{{ form_row(registrationForm.phone) }}
							{{ form_row(registrationForm.agreeTerms) }}

							<button type="submit" class="btn">{% trans %}Register{% endtrans %}</button>
							{{ form_end(registrationForm) }}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
