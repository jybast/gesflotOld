{% extends 'base.html.twig' %}

{% block title %}Assurance index{% endblock %}

{% block body %}
    <h1>Assurance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Compagnie</th>
                <th>Adresse</th>
                <th>Mail</th>
                <th>ValideAt</th>
                <th>ExpireAt</th>
                <th>Montant</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for assurance in assurances %}
            <tr>
                <td>{{ assurance.id }}</td>
                <td>{{ assurance.compagnie }}</td>
                <td>{{ assurance.adresse }}</td>
                <td>{{ assurance.mail }}</td>
                <td>{{ assurance.valideAt ? assurance.valideAt|date('Y-m-d') : '' }}</td>
                <td>{{ assurance.expireAt ? assurance.expireAt|date('Y-m-d') : '' }}</td>
                <td>{{ assurance.montant }}</td>
                <td>
                    <a href="{{ path('assurance_show', {'id': assurance.id}) }}">show</a>
                    <a href="{{ path('assurance_edit', {'id': assurance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('assurance_new') }}">Create new</a>
{% endblock %}
