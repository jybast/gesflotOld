{% extends 'base.html.twig' %}

{% block title%}
	{% trans %}Contact Us
	{% endtrans %}
{% endblock %}

{% block body %}
	<div class="content">

		<div class="wrapper">
			<div class="row justify-content-center">
				<div class="col-md-10">
					<div class="row justify-content-center">
						<div class="col-md-6">
							<h3 class="heading mb-4">{% trans %}
								Let's talk about everything!{% endtrans %}</h3>
							<p>{% trans %}Please use the contact form to deliver any question.{% endtrans %}</p>

							<p><img src="{{ asset('assets/img/contact.svg')}}" alt="Image" class="img-fluid"></p>
						</div>
						<div
							class="col-md-6">
							{#<form> #}
							{{ form_start(form)}}

							{{ form_label(form.email)}}
							{{ form_widget(form.email)}}
							{{ form_label(form.sujet)}}
							{{ form_widget(form.sujet)}}
							{{ form_label(form.message)}}
							{{ form_widget(form.message)}}

							{{ form_end(form)}}
							{#</form> #}
							<div id="form-message">
								{% for message in app.flashes('message') %}
									<div class="alert alert-info" role="alert">{{ message }}</div>
								{% endfor %}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
